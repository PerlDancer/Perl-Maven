<% IF lang_en %>
   <div id="creators">
     <% IF author %>
      <img src="/img/<% author_img %>"  />
         <div class="author_text">
              Written by<br><a href="<% author_google_plus_profile %>?rel=author"><% author_name %></a>
          </div>
     <% END %>
   </div>
<% END %>

<% IF lang_br %>
   <div id="creators">
      <% IF translator %>
         <div id="translator">
          <img src="/img/<% translator_img %>" />
          <div class="author_text">
            Traduzido por<br><a href="<%translator_google_plus_profile %>?rel=author"><% translator_name %></a>
          </div>
         </div>
      <% END %>
      <% IF author %>
        <div id="author">
         <img src="/img/<% author_img %>"  />
         <div class="author_text">
          Escrito por<br><a href="<% author_google_plus_profile %>"><% author_name %></a>
         </div>
        </div>
     <% END %>
   </div>
<% END %>

